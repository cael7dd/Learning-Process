    <target name="restart-cmbChina" description="Restart Server">
        <sshexec host="${server.cmbChina.ip}" username="root" port="${server.cmbChina.port}" keyfile="${server.keyfile}"
                 command="${server.cmbChina.restart}" failonerror="false"/>
    </target>

